
@{
    ViewData["Title"] = "Network Creator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/createStyles.css" />

<div class="row justify-content-center">
    <div class="col-md-10 col-xs-12">
       <!-- Title Area-->

        <div class="jumbotron">
            <h2 id="title">Network Builder</h2>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-10 col-xs-12">
       
        <!-- Display -->
        <div id="box">


        </div>

    </div>

   <!-- drop down for hosts-->

</div>
<div class="row justify-content-center">
    <div class=" col-md-offset-1 col-md-4">
        <button id="addBtn" class="btn btn-primary" onclick="ToggleVisibility()">Add Hosts</button>
        <div id="addHost">
            <button id="formBtn" class="btn btn-primary" onclick="addElement.add()"><span class="glyphicon glyphicon-plus-sign"></span> </button>
            <br />
            <br />
            <div id="namegroup" class="form-group">
                <label for="name">Name: </label>
                <input id="name" class="form-control" type="text"><br />
            </div>
            <div class="form-group">
                <label for="eth0">eth0: </label>
                <input id="eth0"  class="form-control" type="text"><br />
            </div>
            <div class="form-group">
                <label for="eth1">eth1: </label>
                <input id="eth1"  class="form-control" type="text">
            </div>
            <br />

            <button id="saveBtn" onclick="postHost()" class="btn btn-success form-control">Save <span class="glyphicon glyphicon-save"></span></button>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/js/test.js"></script>
